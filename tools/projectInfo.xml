    <newProjectFilePlaceholders>
        <placeHolder sanitized="false">appName</placeHolder>
        <placeHolder suffix="App">appClassName</placeHolder>
        <placeHolder suffix="View">viewClassName</placeHolder>
        <placeHolder suffix="Delegate">delegateClassName</placeHolder>
        <placeHolder suffix="MenuDelegate">menuDelegateClassName</placeHolder>
        <placeHolder suffix="ConfigurePlaybackView">configurePlaybackViewClassName</placeHolder>
        <placeHolder suffix="ConfigureSyncView">syncConfigurationViewClassName</placeHolder>
        <placeHolder suffix="ConfigurePlaybackDelegate">configurePlaybackDelegateClassName</placeHolder>
        <placeHolder suffix="ConfigureSyncDelegate">configureSyncDelegateClassName</placeHolder>
        <placeHolder suffix="ContentDelegate">contentDelegateClassName</placeHolder>
        <placeHolder suffix="ContentIterator">contentIteratorClassName</placeHolder>
        <placeHolder suffix="SyncDelegate">syncDelegateClassName</placeHolder>
    </newProjectFilePlaceholders>

    <newProjectFilesMaps>
        <newProjectFileMap appType="watchface" name="Simple" baseDir="templates/watchface/simple"
